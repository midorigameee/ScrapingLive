{
  "name": "React-FlaskAPI",
  "dockerFile": "../Dockerfile",
  //"service": "React-Python",
  "forwardPorts": [5000, 3000],
  "mounts": [
    {
      "type": "volume",
      "source": "python12_venv",
      "target": "${containerWorkspaceFolder}/python12_venv"
    },
    {
      "type": "volume",
      "source": "node_modules_react",
      "target": "${containerWorkspaceFolder}/simple-react-app/node_modules"
    }
  ],
  "customizations": {
    "vscode": {
      // 参考:https://qiita.com/nube266/items/3434afe6da4d795ac82e
      "extensions": [
        // Web
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "stylelint.vscode-stylelint",
        "ritwickdey.LiveServer",
        "dsznajder.es7-react-js-snippets",
        "formulahendry.auto-rename-tag",
        "formulahendry.auto-close-tag",
        // Python
        "ms-python.python",
        // General
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  "postCreateCommand": "/bin/sh .devcontainer/postCreateCommand.sh",
  "postStartCommand": "/bin/sh .devcontainer/postStartCommand.sh"
}
